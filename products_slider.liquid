{% comment %}
  {% include "products", products_title: 'Сопутствующие товары', products_prefix: 'is-related', products_array: product.similar_products  %}

  За инициализацию слайдера отвечает js-products-slider
{% endcomment %}


{% if products_array.size > 0 %}

{% assign products_limit = products_limit | default: 100 %}
{% assign products_prefix = products_prefix | default: 'is-default' %}

<div class="js-products-slider products products-{{ products_prefix }}">

  <div class="container">

    {% if products_title %}
    <h3 class="products-title">
      {{ products_title }}
    </h3>
    {% endif %}

    <div class="products-slider-wrapper">

      <div class="products-slider swiper-container products-slider-{{ products_prefix }}">
        <div class="swiper-wrapper">

        {% for product in products_array limit: products_limit %}
        <!-- тело цикла -->
        <div class="swiper-slide slide-{{ products_prefix }}">
          {% include "card" %}
        </div>
        <!-- /тело цикла -->
        {% endfor %}

        </div><!-- swiper-wrapper -->
      </div><!-- swiper-container -->

      {% comment %}
        Навигация (должна быть внутри .js-products-slider)
      {% endcomment %}
      <div class="products-control">
        <div class="swiper-button-prev swiper-button-black products-control-prev">
        </div>
        <div class="swiper-button-next swiper-button-black products-control-next">
        </div>
      </div>

    </div>
  </div>
</div>

{% endif %}


{% assign products_array = nil %}
{% assign products_prefix = nil %}
{% assign products_title = nil %}
{% assign products_limit = nil %}
